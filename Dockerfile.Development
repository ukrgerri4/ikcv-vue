FROM node:lts

# set working directory
WORKDIR /app

# add `/app/node_modules/.bin` to $PATH (IMPORTANR)
ENV PATH /app/node_modules/.bin:$PATH 

# install and cache app dependencies
COPY package.json /app/package.json
RUN npm install

RUN npm install @vue/cli -g

# start app
CMD ["npm", "run", "serve"]